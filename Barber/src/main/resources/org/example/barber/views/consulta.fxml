<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../../../../styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.barber.controllers.ConsultaController">

    <!-- Topo: título e campo de busca -->
    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10" left="40" right="40" top="20" />
            </padding>
            <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Consulta de Clientes">
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Label>
        </VBox>
    </top>

    <!-- Centro: lista de clientes e histórico -->
    <center>
        <HBox alignment="CENTER" spacing="60">
            <padding>
                <Insets bottom="20" left="40" right="40" top="20" />
            </padding>

            <!-- Lado esquerdo: clientes -->
            <VBox alignment="TOP_LEFT" spacing="10">
               <TextField fx:id="nomeClienteField" maxWidth="300.0" prefHeight="27.0" prefWidth="560.0" promptText="Buscar por nome">
               <VBox.margin>
                  <Insets top="35.0" />
               </VBox.margin>
            </TextField>
                <Label style="-fx-font-size: 16;" text="Clientes:">
               <VBox.margin>
                  <Insets bottom="-10.0" top="5.0" />
               </VBox.margin></Label>
                <ListView fx:id="clientesListView" onMouseClicked="#mostrarHistorico" prefHeight="450" prefWidth="350" />
            </VBox>

            <!-- Lado direito: histórico -->
            <VBox alignment="TOP_LEFT" spacing="10">
                <Label style="-fx-font-size: 16;" text="Histórico de Serviços:">
               <VBox.margin>
                  <Insets bottom="-10.0" top="10.0" />
               </VBox.margin></Label>
                <TableView fx:id="historicoTableView" prefHeight="450" prefWidth="500">
                    <columns>
                        <TableColumn fx:id="colData" prefWidth="120.0" text="Data/Hora" />
                        <TableColumn fx:id="colServico" prefWidth="160" text="Serviço" />
                        <TableColumn fx:id="colPreco" prefWidth="80" text="Preço" />
                        <TableColumn fx:id="colBarbeiro" prefWidth="130.0" text="Barbeiro" />
                    </columns>
                </TableView>
            </VBox>
        </HBox>
    </center>

    <!-- Rodapé: botão Voltar no canto esquerdo inferior -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets bottom="20" left="40" top="10" />
            </padding>
            <Button onAction="#voltarMenu" prefWidth="100" text="Voltar" />
        </HBox>
    </bottom>

    <!-- Padding geral -->
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</BorderPane>
