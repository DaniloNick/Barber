<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../../../../styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.barber.controllers.ExcluirServicosController">
   <center>
      <VBox alignment="CENTER" spacing="10">
          <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Excluir Serviços Realizados">
            <VBox.margin>
               <Insets bottom="100.0" />
            </VBox.margin>
         </Label>
          <TextField fx:id="campoBusca" maxWidth="400.0" prefWidth="400" promptText="Buscar por nome do cliente ou serviço...">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
         </TextField>
          <TableView fx:id="tabelaServicos" maxWidth="700.0" prefHeight="400" prefWidth="700">
              <columns>
                  <TableColumn fx:id="colData" prefWidth="136.0" resizable="false" text="Data" />
                  <TableColumn fx:id="colCliente" prefWidth="206.0" resizable="false" text="Cliente" />
                  <TableColumn fx:id="colServico" prefWidth="178.0" resizable="false" text="Serviço" />
                  <TableColumn fx:id="colBarbeiro" prefWidth="169.0" resizable="false" text="Barbeiro" />
              </columns>
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
          </TableView>
          <HBox spacing="10">
              <Button onAction="#voltarMenuAdmin" prefWidth="100.0" text="Voltar">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
              <Button onAction="#excluirSelecionado" text="Excluir Selecionado">
               <HBox.margin>
                  <Insets left="160.0" />
               </HBox.margin>
            </Button>
          </HBox>
      </VBox>
   </center>
</BorderPane>
