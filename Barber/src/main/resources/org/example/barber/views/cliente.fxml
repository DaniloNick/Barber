<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../../../../styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.barber.controllers.ClienteController">

    <!-- Título -->
    <top>
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Gerenciamento de Clientes" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" top="30" />
            </padding>
        </Label>
    </top>

    <!-- Conteúdo central -->
    <center>
        <VBox alignment="CENTER" maxWidth="400.0" prefWidth="400.0" spacing="15">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>

            <!-- Label acima do formulário -->
            <Label maxHeight="45.0" maxWidth="500.0" prefHeight="25.0" prefWidth="305.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Cadastro de Cliente:">
                <VBox.margin>
                    <Insets bottom="5.0" top="-40.0" />
                </VBox.margin>
            </Label>

            <!-- Formulário para cadastro/edição -->
            <TextField fx:id="nomeField" maxWidth="400" prefHeight="35" promptText="Nome completo">
                <VBox.margin>
                    <Insets bottom="5.0" top="-20.0" />
                </VBox.margin>
            </TextField>
            <TextField fx:id="telefoneField" maxWidth="400" prefHeight="35" promptText="Telefone">
                <VBox.margin>
                    <Insets bottom="5.0" />
                </VBox.margin>
            </TextField>
            <TextField fx:id="dataNascimentoField" maxWidth="400" prefHeight="35" promptText="Data de Nascimento (DD/MM/AAAA)">
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </TextField>

            <!-- Botões para salvar, excluir e limpar -->
            <HBox alignment="CENTER" maxWidth="400.0" spacing="20">
                <Button fx:id="btnSalvar" onAction="#salvarCliente" prefHeight="40" prefWidth="150" text="Salvar" />
                <Button fx:id="btnExcluir" onAction="#excluirCliente" prefHeight="40" prefWidth="150" text="Excluir" />
            </HBox>
         <BorderPane.margin>
            <Insets left="20.0" />
         </BorderPane.margin>
        </VBox>
    </center>

    <!-- Rodapé: botão voltar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <Button onAction="#voltarMenu" prefHeight="35" prefWidth="150" text="Voltar" />

            <!-- Label para avisos/erros -->
            <Label fx:id="avisoLabel" style="-fx-font-weight: bold;" textFill="red">
                <HBox.margin>
                    <Insets left="400.0" />
                </HBox.margin>
            </Label>
        </HBox>
    </bottom>

    <right>
        <VBox alignment="CENTER" maxWidth="600.0" prefWidth="600.0" spacing="15" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="buscaNomeField" maxWidth="400" promptText="Buscar cliente por nome...">
                    <VBox.margin>
                        <Insets left="-200.0" />
                    </VBox.margin>
                </TextField>
                <TableView fx:id="tabelaClientes" maxWidth="650.0" prefHeight="300.0" prefWidth="700.0">
                    <columns>
                        <TableColumn fx:id="colunaNome" editable="false" prefWidth="206.0" resizable="false" text="Nome" />
                        <TableColumn fx:id="colunaTelefone" editable="false" prefWidth="148.0" resizable="false" text="Telefone" />
                        <TableColumn fx:id="colunaNascimento" editable="false" prefWidth="228.0" resizable="false" text="Data Nascimento" />
                    </columns>
               <VBox.margin>
                  <Insets right="50.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </right>

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</BorderPane>
