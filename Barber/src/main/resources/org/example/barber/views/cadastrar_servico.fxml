<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../../../../styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.barber.controllers.CadastrarServicoController">

    <!-- Topo: título centralizado -->
    <top>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="15" left="10" right="10" top="15" />
            </padding>
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gerenciamento de Serviços">
               <HBox.margin>
                  <Insets bottom="100.0" />
               </HBox.margin></Label>
            </children>
        </HBox>
    </top>

    <!-- Centro -->
    <center>
        <HBox alignment="CENTER" spacing="40">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <!-- Formulário -->
                <VBox spacing="10">
                    <children>
                        <HBox spacing="5">
                            <children>
                                <Label text="Serviço:" />
                                <TextField fx:id="nomeServicoField" prefWidth="200">
                           <HBox.margin>
                              <Insets left="45.0" />
                           </HBox.margin></TextField>
                            </children>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                        </HBox>

                        <HBox spacing="5">
                            <children>
                                <Label text="Preço (R$):" />
                                <TextField fx:id="precoServicoField" prefWidth="200">
                           <HBox.margin>
                              <Insets left="22.0" />
                           </HBox.margin></TextField>
                            </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                        </HBox>

                        <HBox spacing="5">
                            <children>
                                <Label text="Comissão (%):" />
                                <TextField fx:id="comissaoField" prefWidth="200" />
                            </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                        </HBox>

                        <HBox spacing="10">
                            <children>
                                <Button fx:id="salvarButton" onAction="#salvarServico" prefWidth="84" text="Salvar">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin></Button>
                                <Button onAction="#removerServico" prefWidth="94" text="Remover" />
                            </children>
                     <VBox.margin>
                        <Insets left="112.0" top="20.0" />
                     </VBox.margin>
                        </HBox>
                    </children>
                </VBox>

                <!-- Tabela -->
                <VBox spacing="5">
                    <children>
                        <Label text="Serviços Cadastrados:" />
                        <TableView fx:id="tabelaServicos" prefHeight="400.0" prefWidth="500.0">
                            <columns>
                                <TableColumn fx:id="colNome" editable="false" prefWidth="220.0" text="Nome" />
                                <TableColumn fx:id="colPreco" editable="false" prefWidth="120.0" text="Preço (R$)" />
                                <TableColumn fx:id="colComissaoReais" editable="false" prefWidth="144.0" text="Comissão (R$)" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>

    <!-- Rodapé -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="15">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Button onAction="#voltarMenu" prefWidth="94" text="Voltar">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" />
               </HBox.margin></Button>
                <Label fx:id="avisoGerenServico" alignment="CENTER" prefHeight="27.0" prefWidth="345.0">
                    <font>
                        <Font size="13.0" />
                    </font>
               <HBox.margin>
                  <Insets left="350.0" />
               </HBox.margin>
                </Label>
            </children>
        </HBox>
    </bottom>

</BorderPane>
