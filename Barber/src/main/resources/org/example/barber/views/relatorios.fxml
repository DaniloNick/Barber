<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="854.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.barber.controllers.RelatoriosController">

    <children>
        <Label layoutX="320" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Relatórios de Serviços" />

        <Label layoutX="26.0" layoutY="120.0" text="Barbeiro:" />
        <ComboBox fx:id="barbeiroComboBox" layoutX="96.0" layoutY="115.0" onAction="#carregarRelatorio" prefHeight="27.0" prefWidth="162.0" />

        <Label layoutX="50.0" layoutY="166.0" text="De:" />
        <DatePicker fx:id="dataInicialPicker" layoutX="96.0" layoutY="161.0" prefHeight="27.0" prefWidth="162.0" />

        <Label layoutX="49.0" layoutY="212.0" text="Até:" />
        <DatePicker fx:id="dataFinalPicker" layoutX="96.0" layoutY="207.0" prefHeight="27.0" prefWidth="162.0" />

        <Button layoutX="153.0" layoutY="270.0" onAction="#buscarPorPeriodo" prefHeight="33.0" prefWidth="105.0" text="Buscar" />

        <TableView fx:id="relatorioTableView" layoutX="287.0" layoutY="120" prefHeight="300" prefWidth="534.0">
            <columns>
                <TableColumn fx:id="colPeriodo" prefWidth="132.0" text="Período" />
                <TableColumn fx:id="colAtendimentos" prefWidth="118.0" text="Atendimentos" />
                <TableColumn fx:id="colFaturamento" prefWidth="128.0" text="Faturamento (R$)" />
                <TableColumn fx:id="colComissao" prefWidth="156.0" text="Comissão (R$)" />
            </columns>
        </TableView>

        <Button layoutX="50" layoutY="442.0" onAction="#voltarMenu" prefHeight="33.0" prefWidth="105.0" text="Voltar" />
    </children>
</AnchorPane>
