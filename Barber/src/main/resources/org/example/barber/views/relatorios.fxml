<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../../../../styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.barber.controllers.RelatoriosController">

    <!-- Topo: título -->
    <top>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="15" top="15" />
            </padding>
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Relatórios de Serviços">
               <HBox.margin>
                  <Insets bottom="30.0" />
               </HBox.margin></Label>
            </children>
        </HBox>
    </top>

    <!-- Centro -->
    <center>
        <HBox alignment="CENTER_LEFT" spacing="30">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <children>
                <!-- Filtros -->
                <VBox spacing="10">
                    <children>
                        <HBox spacing="5">
                            <children>
                                <Label text="Barbeiro:" />
                                <ComboBox fx:id="barbeiroComboBox" onAction="#carregarRelatorio" prefWidth="160" />
                            </children>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                        </HBox>
                        <HBox spacing="5">
                            <children>
                                <Label text="De:" />
                                <DatePicker fx:id="dataInicialPicker" prefWidth="160">
                           <HBox.margin>
                              <Insets left="40.0" />
                           </HBox.margin></DatePicker>
                            </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                        </HBox>
                        <HBox spacing="5">
                            <children>
                                <Label text="Até:" />
                                <DatePicker fx:id="dataFinalPicker" prefWidth="160">
                           <HBox.margin>
                              <Insets left="35.0" />
                           </HBox.margin></DatePicker>
                            </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                        </HBox>
                        <Button onAction="#buscarPorPeriodo" prefHeight="34.0" prefWidth="162.0" text="Buscar">
                     <VBox.margin>
                        <Insets left="67.0" top="20.0" />
                     </VBox.margin></Button>
                    </children>
               <HBox.margin>
                  <Insets left="120.0" />
               </HBox.margin>
                </VBox>

                <!-- Tabela -->
                <TableView fx:id="relatorioTableView" prefHeight="300.0" prefWidth="534.0">
                    <columns>
                        <TableColumn fx:id="colPeriodo" prefWidth="132.0" text="Período" />
                        <TableColumn fx:id="colAtendimentos" prefWidth="118.0" text="Atendimentos" />
                        <TableColumn fx:id="colFaturamento" prefWidth="128.0" text="Faturamento (R$)" />
                        <TableColumn fx:id="colComissao" prefWidth="156.0" text="Comissão (R$)" />
                    </columns>
               <HBox.margin>
                  <Insets left="150.0" />
               </HBox.margin>
                </TableView>
            </children>
        </HBox>
    </center>

    <!-- Rodapé -->
    <bottom>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="10" left="20" top="10" />
            </padding>
            <children>
                <Button onAction="#voltarMenu" prefWidth="105" text="Voltar" />
            </children>
        </HBox>
    </bottom>

</BorderPane>
