<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="854.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.barber.controllers.UsuariosController">
    <children>
        <Label layoutX="334.0" layoutY="39.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gerenciar Usuários" />

        <TableView fx:id="tabelaUsuarios" layoutX="427.0" layoutY="116.0" prefHeight="233.0" prefWidth="360">
            <columns>
                <TableColumn fx:id="colNome" prefWidth="180" text="Usuário" />
            </columns>
        </TableView>

        <Label layoutX="126.0" layoutY="129.0" style="-fx-font-size: 15;" text="Novo Usuário" />
        <TextField fx:id="novoUsuario" layoutX="126.0" layoutY="175.0" prefHeight="34.0" prefWidth="181.0" promptText="Nome do usuário" />
        <PasswordField fx:id="novaSenha" layoutX="126.0" layoutY="231.0" prefHeight="34.0" prefWidth="181.0" promptText="Senha" />
        <PasswordField fx:id="confirmarSenha" layoutX="126.0" layoutY="278.0" prefHeight="34.0" prefWidth="181.0" promptText="Confirmar senha" />


        <Button layoutX="158.0" layoutY="357.0" onAction="#cadastrarUsuario" prefHeight="34.0" prefWidth="118.0" text="Cadastrar" />
        <Button layoutX="427.0" layoutY="357.0" onAction="#excluirUsuario" prefHeight="34.0" prefWidth="118.0" text="Excluir Selecionado" />

        <Label fx:id="msgErro" layoutX="239.0" layoutY="418.0" prefHeight="34.0" prefWidth="376.0" style="-fx-text-fill: red;" />
      <Label layoutX="427.0" layoutY="97.0" style="-fx-font-size: 15;" text="Usuários Cadastrados" />
      <Button layoutX="40.0" layoutY="435.0" onAction="#voltarMenu" prefHeight="34.0" prefWidth="118.0" text="Voltar" />
    </children>
</AnchorPane>
