<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../../../../styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.barber.controllers.ClientesAgendadosController">

    <!-- Topo: Título centralizado -->
    <top>
        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Clientes Agendados">
               <HBox.margin>
                  <Insets bottom="80.0" />
               </HBox.margin></Label>
            </children>
        </HBox>
    </top>

    <!-- Centro: conteúdo principal em HBox -->
    <center>
        <HBox alignment="CENTER" spacing="50.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <!-- Coluna da lista e busca -->
                <VBox spacing="10.0">
                    <children>
                        <HBox spacing="5.0">
                            <children>
                                <Label style="-fx-font-size: 15;" text="Nome:" />
                                <TextField fx:id="buscarNomeTextField" maxWidth="216.0" prefHeight="27.0" prefWidth="216.0">
                           <HBox.margin>
                              <Insets bottom="10.0" left="5.0" />
                           </HBox.margin></TextField>
                            </children>
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                        </HBox>
                        <ListView fx:id="agendamentosListView" prefHeight="250.0" prefWidth="275.0" />
                    </children>
                </VBox>

                <!-- Coluna de edição -->
                <VBox spacing="10.0">
                    <children>
                        <Label alignment="CENTER" style="-fx-font-size: 16; -fx-font-weight: bold;" text="Editar / Remover Agendamento">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin></Label>
                        <HBox spacing="10.0">
                            <children>
                                <Label style="-fx-font-size: 15;" text="Data:" />
                                <DatePicker fx:id="dataPicker" prefWidth="180.0">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin></DatePicker>
                            </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label style="-fx-font-size: 15;" text="Hora:" />
                                <ComboBox fx:id="horaComboBox" prefWidth="180.0" />
                            </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                        </HBox>
                        <Button fx:id="editarButton" onAction="#editarAgendamento" prefHeight="34.0" prefWidth="185.0" text="Atualizar Agendamento">
                     <VBox.margin>
                        <Insets left="50.0" top="20.0" />
                     </VBox.margin></Button>
                        <Button fx:id="removerButton" onAction="#removerAgendamento" prefHeight="34.0" prefWidth="186.0" text="Remover Agendamento">
                     <VBox.margin>
                        <Insets left="50.0" top="10.0" />
                     </VBox.margin></Button>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>

    <!-- Bottom: aviso centralizado + botão Voltar no canto esquerdo -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
            </padding>
            <children>
                <Button onAction="#voltarMenu" prefHeight="37.0" prefWidth="142.0" text="Voltar" />
                <Label fx:id="avisoClientesAgendados" alignment="CENTER" prefHeight="35.0" prefWidth="443.0">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </bottom>

</BorderPane>
