<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="854.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.barber.controllers.AgendarClienteController">
    <children>
        <Label layoutX="315.0" layoutY="55.0" prefHeight="54.0" prefWidth="245.0" style="-fx-font-size: 25px;" text="Agendar Cliente" />

        <Label layoutX="148.0" layoutY="152.0" style="-fx-font-size: 15;" text="Nome:" />
        <TextField fx:id="nomeClienteField" layoutX="215.0" layoutY="150.0" prefHeight="25.0" prefWidth="267.0" />

        <Label layoutX="148.0" layoutY="202.0" style="-fx-font-size: 15;" text="Data:" />
        <DatePicker fx:id="dataPicker" layoutX="215.0" layoutY="200.0" />

        <Label layoutX="148.0" layoutY="252.0" style="-fx-font-size: 15;" text="Hora:" />
        <Spinner fx:id="horaSpinner" layoutX="215.0" layoutY="250.0" prefWidth="100" />

        <Button layoutX="215.0" layoutY="320.0" onAction="#agendarCliente" prefHeight="35.0" prefWidth="100.0" text="Agendar" />
        <Button layoutX="48.0" layoutY="426.0" onAction="#voltarMenu" prefHeight="35.0" prefWidth="100.0" text="Voltar" />

        <Label fx:id="avisoAgendarCliente" alignment="CENTER" layoutX="267.0" layoutY="408.0" prefHeight="35.0" prefWidth="352.0">
            <font>
                <Font size="13.0" />
            </font>
        </Label>

        <!-- ListView para exibir clientes encontrados -->
        <ListView fx:id="agendarClienteLista" layoutX="571.0" layoutY="150.0" prefHeight="205.0" prefWidth="214.0" />
    </children>
</AnchorPane>
