<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="854.0" stylesheets="@../../../../styles/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.barber.controllers.AgendarClienteController">

    <!-- Título topo -->
    <top>
        <Label style="-fx-font-size: 25px; -fx-font-weight: bold;" text="Agendar Cliente" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" top="30" />
            </padding>
         <BorderPane.margin>
            <Insets bottom="50.0" />
         </BorderPane.margin>
        </Label>
    </top>

    <!-- Centro com formulário à esquerda e lista à direita -->
    <center>
        <HBox alignment="TOP_CENTER" prefHeight="319.0" prefWidth="854.0" spacing="40">
            <padding>
                <Insets bottom="10" left="40" right="40" top="10" />
            </padding>

            <!-- Formulário -->
            <VBox alignment="TOP_LEFT" prefWidth="400" spacing="20">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label prefWidth="70" style="-fx-font-size: 15px;" text="Nome:" />
                    <TextField fx:id="nomeClienteField" maxWidth="250.0" prefHeight="25" prefWidth="320" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label prefWidth="70" style="-fx-font-size: 15px;" text="Data:" />
                    <DatePicker fx:id="dataPicker" maxWidth="250.0" prefWidth="320" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label prefWidth="70" style="-fx-font-size: 15px;" text="Hora:" />
                    <Spinner fx:id="horaSpinner" prefWidth="100" />
                </HBox>

                <Button onAction="#agendarCliente" prefHeight="35" prefWidth="150" text="Agendar" />
            <HBox.margin>
               <Insets />
            </HBox.margin>
            </VBox>

            <!-- Lista de clientes -->
            <ListView fx:id="agendarClienteLista" maxHeight="300.0" prefHeight="250.0" prefWidth="250" />
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
        </HBox>
    </center>

    <!-- Rodapé com botão voltar -->
    <bottom>
        <HBox alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <Button onAction="#voltarMenu" prefHeight="35" prefWidth="100" text="Voltar" />
            <Label fx:id="avisoAgendarCliente" style="-fx-font-size: 13px;">
                <padding>
                    <Insets left="20" />
                </padding>
            </Label>

        </HBox>
    </bottom>

</BorderPane>
